.footer-main-nav
	margin-bottom 40px
	display flex
	flex-direction column
	&__list
		margin 0
		padding 0
		list-style none
		display flex
		flex-direction column
		align-items center

	&__list-item
		margin-bottom 20px
		&:last-child
			margin-bottom 0

	&__link
		text-decoration none
		font-weight 700
		font-size 20px
		line-height 23px
		color #FAFAFA

@media (min-width: 768px)
	.footer-main-nav
		flex-direction row
		justify-content space-between

		&__list
			flex-direction row
			gap 14px

		&__list-item
			margin 0

		&__link
			font-size 16px
			line-height 18px
			vertical-align bottom
