.ranking-system
	background-color #0263B2
	padding 56px 0

	&__title
		margin 0px 0px 30px 0px
		color #fff

	&__subtitle
		line-height 140%
		color #fff
		margin 0px 0px 20px 0px

@media (min-width: 768px)
	.ranking-system
		&__subtitle
			line-height 150%
			margin-bottom 30px

@media (min-width: 1000px)
	.ranking-system
		&__title
			margin 0px 0px 33px 0px

		&__content
			display grid
			grid-template-columns 1fr 1fr
			gap 20px

@media (min-width: 1200px)
	.ranking-system
		&__title
			margin 0px 0px 40px 0px

		&__content
			gap 50px
