.img-content-2
	display flex
	flex-direction column
	align-items center

	.check-button
		margin-right 0

@media (min-width: 320px)
	.img-content-2
		&__img
			margin-bottom 40px
			width 100%
			height 100%
			max-width 320px

@media (min-width: 768px)
	.img-content-2
		&__img
			max-width 354px

@media (min-width: 1000px)
	.img-content-2
		margin-top 32px
		align-self start
		margin-right 20px
		flex 0 0 auto
		&__img
			max-width 372px

@media (min-width: 1200px)
	.img-content-2
		margin-top 0
		margin-right 35px
		&__img
			max-width 479px
