.header
	background-color #1E3685
	margin-bottom 30px
	transition .3s

	&__content
		display flex
		justify-content space-between
		align-items center

	&__right-content
		display flex
		align-items center

.shadow
	transition .3s
	-webkit-box-shadow 0px 8px 37px 0px rgba(30, 54, 133, 0.7)
	-moz-box-shadow 0px 8px 37px 0px rgba(30, 54, 133, 0.7)
	box-shadow 0px 8px 37px 0px rgba(30, 54, 133, 0.7)

.container
	padding 0 20px
	margin 0 auto
	max-width 1136px

@media (min-width: 768px)
	.header
		margin-bottom 40px

@media (min-width: 1000px)
	.header
		margin-bottom 80px

@media (min-width: 1200px)
	.header
		margin-bottom 110px
	.container
		padding 0
