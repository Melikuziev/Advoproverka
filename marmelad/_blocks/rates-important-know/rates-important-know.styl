.rates-important-know
	padding 20px 0px 50px 0px
	&__title
		font-family 'Play'
		font-size 24px
		line-height 28px
		text-align center
		color #181818
		margin 0px 0px 10px 0px
		span
			color #0263B2

	&__d-flex
		display flex
		flex-direction column
		align-items center

	&__img-content
		margin 0px 0px 10px 0px

	&__img
		vertical-align top

	&__content
		display flex
		flex-direction column
		align-items center
		margin 0px 0px 20px 0px
		&:last-child
			margin 0px 0px 0px 0px

	&__icon
		width 30px
		height 30px
		flex 0 0 auto
		margin 0px 0px 10px 0px

	&__text
		text-align center
		font-family 'Play'
		font-size 14px
		line-height 24px
		margin 0px 0px 0px 0px

@media (min-width: 768px)
	.rates-important-know
		&__title
			text-align left
			font-size 30px
			line-height 30px
			margin 0px 0px 20px 0px

		&__d-flex
			flex-direction row
			justify-content center

		&__img-content
			width 100%
			max-width 240px
			margin 0px 10px 0px 0px

		&__text-content
			width 100%
			max-width 550px

		&__content
			flex-direction row

		&__text
			text-align left

		&__icon
			margin 0px 10px 0px 0px

@media (min-width: 1000px)
	.rates-important-know
		&__d-flex
			flex-direction row
			justify-content center

		&__img-content
			max-width 305px
			margin 0px 20px 0px 0px

		&__text-content
			max-width 100%

		&__content
			flex-direction row

		&__text
			text-align left
			font-size 15px
			line-height 26px

		&__icon
			margin 0px 10px 0px 0px

@media (min-width: 1200px)
	.rates-important-know
		&__title
			font-size 36px
			line-height 42px

		&__img-content
			margin 0px 75px 0px 0px
