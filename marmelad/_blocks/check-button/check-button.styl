.check-button
	display inline-block
	font-size 16px
	line-height 18px
	color #FFFFFF
	text-decoration none
	padding 15px 20px
	width 100%
	background-color #B20237
	border-radius 5px
	text-align center
	margin-bottom 15px
	transition .3s
	&:hover
		background-color #99002e
	&:active
		background-color #800026

@media (min-width: 480px)
	.check-button
		max-width 320px

@media (min-width: 1000px)
	.check-button
		padding 17px 20px
		max-width 202px
		margin-bottom 0
		margin-right 20px

@media (min-width: 1200px)
	.check-button
		margin-right 30px
		max-width 224px
		font-size 17px
		line-height 20px
