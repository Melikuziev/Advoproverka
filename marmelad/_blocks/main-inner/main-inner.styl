.main-inner
	display flex
	flex-direction column

	&__text
		display inline-block
		font-family 'Play'
		font-weight 700
		font-size 16px
		line-height 130%
		text-transform uppercase
		color #0263B2
		margin 0 0 5px 0

	&__title
		font-family 'Play'
		font-weight 700
		font-size 30px
		line-height 110%
		color #181818
		margin 0 0 20px 0

	&__subtitle
		display flex
		font-size 18px
		line-height 140%
		margin-bottom 20px
		&:first-child
			margin-bottom 10px

	&__icon
		width 18px
		flex 0 0 auto
		align-self start
		margin-right 5px

@media (min-width: 360px)
	.main-inner
		&__text
			font-size 18px

		&__title
			font-size 32px

@media (min-width: 480px)
	.main-inner
		&__text
			margin-right -1px
			line-height 21px

		&__subtitle
			&:first-child
				margin-bottom 15px

@media (min-width: 768px)
	.main-inner
		flex-direction row
		padding-bottom 84px

		&__text
			margin-right 0
			font-size 21px
			line-height 24px

		&__title
			font-size 42px

		&__subtitle-content
			margin-bottom 40px
			max-width 354px

		&__subtitle
			&:first-child
				margin-bottom 20px

@media (min-width: 1000px)
	.main-inner
		padding-bottom 76px

		&__title
			max-width 600px

		&__subtitle-content
			display flex
			min-width 471px

		&__subtitle
			max-width 270px
			&:first-child
				margin-bottom 0
			&:last-child
				margin-left 20px

@media (min-width: 1200px)
	.main-inner
		padding-bottom 103px
		&__content
			max-width 560px
			margin-top 22px
		&__title
			max-width 100%
			font-size 51px
			margin-bottom 34px

		&__subtitle-content
			max-width 100%
			margin-bottom 48px

		&__subtitle
			max-width 360px

@media (min-width: 1400px)
	.main-inner
		&__subtitle
			&:last-child
				margin-left 30px
		&__content
			margin-right 50px
