.main-inner
	&__content
		display flex
		flex-direction column

	&__header
		margin 0px 0px 20px 0px

	&__text
		font-family 'Play'
		font-weight 700
		font-size 16px
		line-height 130%
		text-transform uppercase
		color #0263B2
		margin 0px 0px 5px 0px

	&__title
		font-family 'Play'
		font-size 30px
		line-height 110%
		color #181818
		margin 0px 0px 0px 0px

	&__text-d-flex
		display flex
		flex-direction column
		margin 0px 0px 20px 0px

	&__text-content
		display flex
		flex-direction column
		gap 10px
		margin 0px 0px 20px 0px

	&__wrapper
		display flex
		gap 5px

	&__wrapper-icon
		width 18px
		height 18px
		flex 0 0 auto

	&__wrapper-text
		line-height 140%
		margin 0px 0px 0px 0px

@media (min-width: 360px)
	.main-inner
		&__text
			font-size 18px

		&__title
			font-size 32px

		&__wrapper-text
			font-size 18px

@media (min-width: 480px)
	.main-inner
		&__text
			line-height 21px

		&__text-content
			gap 15px

@media (min-width: 768px)
	.main-inner
		&__content
			padding 0px 0px 84px 0px
			flex-direction row
			flex-wrap wrap

		&__header
			flex 1 1 100%

		&__text
			font-size 21px
			line-height 24px

		&__title
			font-size 42px

		&__text-d-flex
			flex 1 1 50%
			margin 0px 0px 0px 0px

		&__text-content
			gap 20px

@media (min-width: 1000px)
	.main-inner
		display flex
		flex-wrap wrap
		&__content
			padding 0px 0px 76px 0px
			display block
			flex 1 1 50%

		&__header
			flex 1 1 50%

		&__text-content
			flex-direction row

		&__text
			width 108%

@media (min-width: 1200px)
	.main-inner
		padding 0px 0px 103px 0px

		&__content
			padding 0px 0px 0px 0px

		&__header
			margin 0px 0px 34px 0px

		&__title
			font-size 51px

		&__text
			width 100%
