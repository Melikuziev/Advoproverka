.footer-social-networks
	display flex
	align-items center
	flex-direction column

	&__social-networks
		margin-bottom 30px

	&__icon
		margin-left 10px
		&:first-child
			margin-left 0

	&__numbers
		display flex
		flex-direction column
		margin-bottom 20px

	&__number
		text-decoration none
		font-size 24px
		line-height 28px
		color #FAFAFA
		margin-bottom 5px
		&:last-child
			margin-bottom 0

@media (min-width: 768px)
	.footer-social-networks
		margin 0px 0px 20px 0px
		&__numbers
			margin 0px 0px 0px 0px

@media (min-width: 1000px)
	.footer-social-networks
		margin 0px 0px 40px 0px
