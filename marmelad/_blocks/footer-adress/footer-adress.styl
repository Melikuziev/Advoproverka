.footer-adress
	display flex
	flex-direction column
	align-items center
	margin 0px 0px 30px 0px
	&__adress
		font-size 18px
		line-height 21px
		color #FAFAFA
		margin 0px 0px 20px 0px

	&__icon
		margin-right 10px

	&__privacy-policy
		font-weight 700
		font-size 12px
		line-height 14px
		color #FAFAFA
		text-decoration none
		display inline-block

@media (min-width: 768px)
	.footer-adress
		align-self center
		margin 0px 0px 0px 0px
		&__adress
			margin 0px 0px 17px 0px

		&__privacy-policy
			align-self start

@media (min-width: 1000px)
	.footer-adress
		align-self start
		&__adress
			margin 0px 0px 20px 0px
