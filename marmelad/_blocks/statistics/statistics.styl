.statistics
	&__title
		font-family 'Helveticaneuecyr'
		font-weight 700
		font-size 18px
		line-height 130%
		color #fff
		margin 0px 0px 10px 0px

	&__list-content
		display flex
		align-items center
		margin-bottom 20px
		width 100%
		&--margin
			margin-bottom 0

	&__icon
		flex 0 0 auto
		margin-right 10px

	&__text-title
		font-weight 700
		font-size 24px
		line-height 150%
		color #fff
		margin 0px 0px 0px 0px

	&__text
		font-size 14px
		line-height 140%
		color #fff
		margin 0px 0px 0px 0px


@media (min-width: 480px)
	.statistics
		&__left-side,
		&__right-side
			display flex
			gap 20px

		&__list-content
			&--margin-none
				margin-bottom 0

@media (min-width: 768px)
	.statistics
		&__title
			margin 0px 0px 20px 0px
			line-height 150%

		&__text
			line-height 150%

		&__list-content
			margin-bottom 30px
			&--margin,
			&--margin-none
				margin-bottom 0

@media (min-width: 1200px)
	.statistics
		&__title
			margin 0px 0px 36px 0px

		&__list-content
			margin-bottom 40px
			&--margin,
			&--margin-none
				margin-bottom 0
