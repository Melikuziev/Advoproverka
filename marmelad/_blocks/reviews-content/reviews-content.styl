.reviews-content
	display flex
	flex-direction column
	&__content
		background-color #fff
		padding 20px
		border-radius 10px
		width 100%
		overflow scroll
		overflow-X hidden
		&--content-2,
		&--content-3,
		&--content-4,
		&--content-5,
		&--content-6
			display none

	&__title
		font-family 'Helveticaneuecyr'
		font-weight 700
		font-size 18px
		line-height 120%
		color #0263B2
		margin 0px 0px 10px 0px

	&__review
		line-height 140%
		margin 0px 0px 20px 0px

	&__outro
		display flex
		justify-content space-between

	&__name
		line-height 150%
		color #66727F
		margin 0px 0px 0px 0px

	&__date
		color #A5AEB3
		margin 0px 0px 0px 0px

	#scrollbar::-webkit-scrollbar-track
		background-color #fff
		border-radius 10px

	#scrollbar::-webkit-scrollbar
		width 2px

	#scrollbar::-webkit-scrollbar-thumb
		background-color #0263B2

	&__dot-container
		padding 30px 0
		display flex
		align-items center
		justify-content center
		border-bottom 1px solid #E2E2E2
		margin-bottom 40px

	&__dot
		cursor pointer
		height 10px
		width 10px
		margin 0 2px
		border 1px solid #1E3685
		border-radius 50%
		display inline-block
		transition .3s
		&:hover
			background-color #1E3685

	&__icon-left
		margin-right 20px

	&__icon-right
		margin-left 20px

	.check-button
		align-self center
		margin-right 0

@media (min-width: 768px)
	.reviews-content
		&__title
			line-height 150%

		&__review
			line-height 150%

		&__d-flex
			display flex
			gap 20px

		&__content
			&--content-2
				display block

@media (min-width: 1000px)
	.reviews-content
		&__content
			&--content-2,
			&--content-3
				max-height 308px
				display block
